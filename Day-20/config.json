{
    "api_settings": {
        "api_key": "YOUR_API_KEY_HERE",
        "endpoint": "https://api.openai.com/v1/completions"
    },
    "default_parameters": {
        "model": "gpt-4",
        "temperature": 0.7,
        "max_tokens": 100,
        "top_p": 0.9,
        "frequency_penalty": 0,
        "presence_penalty": 0.6
    },
    "user_prompts": {
        "welcome_message": "Welcome to the GenAI platform! How can I assist you today?",
        "farewell_message": "Thank you for using the GenAI platform. Have a great day!"
    },
    "logging": {
        "enable_logging": true,
        "log_file": "api_responses.log",
        "log_level": "info"
    },
    "retry_policy": {
        "max_retries": 3,
        "initial_delay": 2,
        "backoff_factor": 2
    }
}
